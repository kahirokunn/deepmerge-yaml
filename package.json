{
  "name": "deepmerge-yaml",
  "version": "0.0.1",
  "description": "deep merge yaml",
  "keywords": [
    "typescript",
    "yaml",
    "merge",
    "deepmerge",
    "cli",
    "bin"
  ],
  "bugs": {
    "url": "https://github.com/kahirokunn/deepmerge-yaml/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kahirokunn/deepmerge-yaml.git"
  },
  "license": "MIT",
  "author": "kahirokunn",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "types": "lib/index.d.js",
  "bin": "lib/bin/deepmerge-yaml.js",
  "files": [
    "lib",
    "esm"
  ],
  "scripts": {
    "build": "npm run cleanup && npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -p tsconfig.cjs.json && chmod +x ./lib/bin/deepmerge-yaml.js",
    "build:esm": "tsc -p tsconfig.esm.json && chmod +x ./esm/bin/deepmerge-yaml.js",
    "cleanup": "rm -rf lib esm",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}' --max-warnings=0",
    "lint:fix": "npm run prettier && npx eslint --fix",
    "prepublishOnly": "npm run build",
    "prettier": "prettier '**/*.{js,jsx,ts,tsx,json}' --write",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.json": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{yml,yaml}": [
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "dependencies": {
    "commander": "^7.0.0",
    "deepmerge": "^4.2.2",
    "js-yaml": "^4.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.12.10",
    "@babel/preset-env": "7.12.11",
    "@babel/preset-typescript": "7.12.7",
    "@types/commander": "2.12.2",
    "@types/jest": "26.0.20",
    "@types/js-yaml": "4.0.0",
    "@types/node": "14.14.22",
    "@typescript-eslint/eslint-plugin": "4.14.1",
    "@typescript-eslint/parser": "4.14.1",
    "babel-jest": "26.6.3",
    "babel-plugin-module-resolver": "4.1.0",
    "eslint": "7.19.0",
    "eslint-config-prettier": "7.2.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "3.4.1",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "eslint-plugin-unicorn": "27.0.0",
    "husky": "4.3.8",
    "jest": "26.6.3",
    "lint-staged": "10.5.3",
    "prettier": "2.2.1",
    "sort-package-json": "1.48.1",
    "ts-node": "9.1.1",
    "type-fest": "0.20.2",
    "typescript": "4.1.3"
  }
}
