{
  "name": "deepmerge-yaml",
  "version": "0.0.3",
  "description": "deep merge yaml",
  "keywords": [
    "typescript",
    "yaml",
    "merge",
    "deepmerge",
    "cli",
    "bin"
  ],
  "bugs": {
    "url": "https://github.com/kahirokunn/deepmerge-yaml/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kahirokunn/deepmerge-yaml.git"
  },
  "license": "MIT",
  "author": "kahirokunn",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "types": "lib/index.d.js",
  "bin": "lib/bin/deepmerge-yaml.js",
  "files": [
    "lib",
    "esm"
  ],
  "scripts": {
    "build": "npm run cleanup && npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -p tsconfig.cjs.json && chmod +x ./lib/bin/deepmerge-yaml.js",
    "build:esm": "tsc -p tsconfig.esm.json && chmod +x ./esm/bin/deepmerge-yaml.js",
    "cleanup": "rm -rf lib esm",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}' --max-warnings=0",
    "lint-staged": "lint-staged",
    "lint:fix": "npm run prettier && npx eslint --fix",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "prettier": "prettier '**/*.{js,jsx,ts,tsx,json}' --write",
    "test": "jest"
  },
  "lint-staged": {
    "*.json": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{yml,yaml}": [
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "dependencies": {
    "commander": "^9.3.0",
    "deepmerge": "^4.2.2",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@babel/core": "7.18.10",
    "@babel/preset-env": "7.18.10",
    "@babel/preset-typescript": "7.18.6",
    "@types/commander": "^2.12.2",
    "@types/jest": "^28.1.1",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^17.0.40",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "babel-jest": "^28.1.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unicorn": "^46.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "lint-staged": "^13.0.0",
    "prettier": "^2.6.2",
    "sort-package-json": "^1.57.0",
    "ts-node": "^10.8.1",
    "type-fest": "^2.13.0",
    "typescript": "^4.7.3"
  }
}
